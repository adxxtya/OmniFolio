---
const { color, image, title, description, tags } = Astro.props;
---

<div
  class="max-w-sm rounded overflow-hidden shadow-lg"
  style={{ backgroundColor: `${color}` }}
>
  <div class="px-6 py-4">
    <img src=`/assets/about/icons8-${image}-50.png` alt="coding" class="w-20" />
    <div class="text-white font-bold text-2xl mt-3 mb-1">
      {title}
    </div>
    <p class="text-white text-base">
      {description}
    </p>
  </div>
  <div class="px-6 pt-4 pb-2">
    {
      tags.map((tag: any) => (
        <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">
          #{tag}
        </span>
      ))
    }
  </div>
</div>
